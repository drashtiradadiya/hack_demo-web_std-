<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap css cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Bootstrap Js cdn -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <!-- CSS link -->
    <link rel="stylesheet" href="/css/SF_Sign_up.css">
    <title>Sign Up | Faculty</title>
</head>

<body>
    <div class="main">
        <div class="container mt-4">
            <div class="text-light title">
                <h3 class="mt-3">
                    Sign Up for Faculty
                </h3>
            </div>
            <form action="" method="post">
                <!-- First Name -->
                <div class="mb-3 mt-4">
                    <label for="first_Name" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="first_Name" placeholder="First Name" required>
                </div>

                <!-- Last Name -->
                <div class="mb-3 mt-3">
                    <label for="last_Name" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="last_Name" placeholder="Last Name" required>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                </div>

                <!-- Faculty ID -->
                <div class="mb-3">
                    <label for="faculty_id" class="form-label">Faculty ID</label>
                    <input type="tel" maxlength="11" class="form-control" id="faculty_id" placeholder="Faculty ID"
                        required>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" placeholder="Password"
                        aria-describedby="passwordHelpBlock" required>
                    <div id="passwordHelpBlock" class="form-text">
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain
                        spaces,
                        special characters, or emoji.
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label for="confirm_password" class="form-label">Confirm Password</label>
                    <input type="password" id="confirm_password" class="form-control" placeholder="Confirm Password" pa
                        aria-describedby="passwordHelpBlock" required>
                </div>

                <!-- Sign Up Button -->
                <button type="submit" id="submit" class="btn btn-primary button">Sign Up</button>
            </form>
        </div>
    </div>
    <script src="js/SF_Sign_up.js"></script>
</body>

</html>